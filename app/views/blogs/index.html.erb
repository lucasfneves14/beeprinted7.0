              <div class="post-category">
                <%@blog1[1].categorium.each do |categoria|%>
                <a href=""><%=categoria.name%></a>
                <%end%>
              </div>
              <h3 class="post-title"><a href=<%=blog_path(@blog1[1].url)%>><%=@blog1[1].title%></a></h3>
              <ul class="post-meta">
                <li><%=@blog1[1].user.name%> <%=@blog1[1].user.sobrenome%></li>
                <li><%=@blog1[1].created_at.strftime("%d %B %Y")%></li>
              </ul>
            </div>
          </div>
          <!-- /post -->

          <!-- post -->
          <div class="post post-thumb">
            <a class="post-img" href=<%=blog_path(@blog1[2].url)%>><img src="https://ds76otpcq42vd.cloudfront.net/Revisao_Bee7.0/Assets/Imagens/pre-image.jpg" data-src=<%=@blog1[2].attachment.url(:relacionados)%> class='lazyload' alt=""></a>
            <div class="post-body">
              <div class="post-category">
                <%@blog1[2].categorium.each do |categoria|%>
                <a href=""><%=categoria.name%></a>
                <%end%>
              </div>
              <h3 class="post-title"><a href=<%=blog_path(@blog1[2].url)%>><%=@blog1[2].title%></a></h3>
              <ul class="post-meta">
                <li><%=@blog1[2].user.name%> <%=@blog1[2].user.sobrenome%></li>
