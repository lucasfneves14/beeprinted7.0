              </ul>
            </div>
          </div>
          <!-- /post -->
        </div>
      </div>
      <!-- /row -->
    </div>
    <!-- /container -->
  </div>
  <!-- /SECTION -->

  <!-- SECTION -->
  <div class="section">
    <!-- container -->
    <div class="container">
      <!-- row -->
      <div class="row">
        <div class="col-md-8">
          <!-- row -->
          <div class="row">
            <div class="col-md-12">
              <div class="section-title">
                <h2 class="title">Artigos recentes</h2>
              </div>
            </div>
            <!-- post -->
            <%@blogs.each do |blog|%>
            <div class="col-md-6" style='min-height:350px;'>
              <div class="post">
                <a class="post-img" href=<%=blog_path(blog.url)%>><img src="https://ds76otpcq42vd.cloudfront.net/Revisao_Bee7.0/Assets/Imagens/pre-image.jpg" class='lazyload' data-src=<%=blog.attachment.url(:relacionados)%> alt=""></a>
                <div class="post-body">
                  <div class="post-category">
                    <a href=""></a>
                  </div>
                  <h3 class="post-title"><a href=<%=blog_path(blog.url)%>><%=blog.title%></a></h3>
                  <ul class="post-meta">
                    <li class='font-bold'><%=blog.user.name%> <%=blog.user.sobrenome%></li>
                    <li><%=blog.created_at.strftime("%d %B %Y")%></li>
                  </ul>
                </div>
              </div>
            </div>
            <%end%>
            <!-- /post -->
          </div>
          <!-- /row -->

          <!-- row -->
        </div>
        <div class="col-md-4">
          <!-- ad widget-->
          <!-- /ad widget -->

          <!-- social widget -->
        <%=render 'coluna', popular: @popular%>
        </div>
      </div>
      <!-- /row -->
    </div>
    <!-- /container -->
  </div>
