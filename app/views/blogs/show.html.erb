<%= content_for(:css) do %>
<link rel="stylesheet" href="https://s3.amazonaws.com/beeprinted-stls/Revisao_Bee7.0/Assets/CSS/Blogs/blog.css">

<%end%>

	<!-- HEADER -->
	<header id="header">
		<!-- NAV -->

			<!-- Main Nav -->
			

		<!-- PAGE HEADER -->
		<div id="post-header" class="page-header">
			<div class="page-header-bg" style="background-image: url('<%=@blog.attachment.url(:capa)%>');background-repeat: no-repeat; background-size: cover;" data-stellar-background-ratio="0.5"></div>
			<div class="container">
				<div class="row">
					<div class="col-md-10">
						<div class="post-category">
							<%@blog.categorium.each do |categoria|%>
							<a href="category.html"><%=categoria.name%></a>
							<%end%>
						</div>
						<h1><%=@blog.title%></h1>
						<ul class="post-meta">
							<li><a href="author.html"><%=@blog.user.name%> <%=@blog.user.sobrenome%></a></li>
							<li><%=@blog.created_at.strftime("%d %B %Y")%></li>
							<li><i class="fa fa-comments"></i> 3</li>
							<li><i class="fa fa-eye"></i> 807</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
		<!-- /PAGE HEADER -->
	</header>
	<!-- /HEADER -->

	<!-- section -->
	<div class="section">
		<!-- container -->
		<div class="container">
			<!-- row -->
			<div class="row">
				<div class="col-md-8">
					<!-- post share -->
					<div class="section-row">
						<div class="post-share">
							<a href="https://www.facebook.com/sharer/sharer.php?u=https://beeprinted.com.br<%=blog_path(@blog.url)%>" class="social-facebook"><i class="fa fa-facebook"></i><span>Share</span></a>
							<a href="https://twitter.com/intent/tweet?text=https://beeprinted.com.br<%=blog_path(@blog.url)%>" class="social-twitter"><i class="fa fa-twitter"></i><span>Tweet</span></a>
							<a href="https://www.linkedin.com/shareArticle?mini=true&url=https://beeprinted.com.br<%=blog_path(@blog.url)%>" class="social-pinterest" style='background: #127bb6 !important'><i class="fa fa-linkedin"></i><span>Linkedin</span></a>
							<a href="#" class="social-pinterest"><i class="fa fa-google-plus"></i><span>Plus</span></a>
						</div>
					</div>
					<!-- /post share -->

					<!-- post content -->
					<div class="section-row">
						<h3><%=@blog.summary%></h3>
						<%= @blog.body.html_safe %>
					</div>
					<!-- /post content -->

					<!-- post tags -->
					<div class="section-row">
						<div class="post-tags">
							<ul>
								<li>TAGS:</li>
								<%@blog.categorium.each do |categoria|%>
								<li><a href="#"><%=categoria.name%></a></li>
								<%end%>
							</ul>
						</div>
					</div>
					<!-- /post tags -->

					<!-- post nav -->
					<div class="section-row">
						<div class="post-nav">
							<%if @previous%>
							<div class="prev-post">
								<a class="post-img" href=<%=blog_path(@previous.url)%>><img src=<%=@previous.attachment.url(:thumb)%> alt=""></a>
								<h3 class="post-title"><a href="#"><%=@previous.title%></a></h3>
								<span>Artigo anterior</span>
							</div>
							<%end%>
							<%if @next%>
							<div class="next-post">
								<a class="post-img" href=<%=blog_path(@next.url)%>><img src=<%=@next.attachment.url(:thumb)%> alt=""></a>
								<h3 class="post-title"><a href="#"><%=@next.title%></a></h3>
								<span>Pr√≥ximo artigo</span>
							</div>
							<%end%>
						</div>
					</div>
					<!-- /post nav  -->

					<!-- post author -->
					<div class="section-row">
						<div class="section-title">
							<h3 class="title">Sobre <a href="author.html"><%=@blog.user.name%> <%=@blog.user.sobrenome%></a></h3>
						</div>
						<div class="author media">
							<div class="media-left">
								<a href="author.html">
									<img class="author-img media-object" src="./img/avatar-1.jpg" alt="">
								</a>
							</div>
							<div class="media-body">
								<p>Falando aqui sobre o autor e tal... Tenho que falar com a Maria para ela escrever algo sobre ela.</p>
								<ul class="author-social">
									<li><a href="#"><i class="fa fa-facebook"></i></a></li>
									<li><a href="#"><i class="fa fa-twitter"></i></a></li>
									<li><a href="#"><i class="fa fa-google-plus"></i></a></li>
									<li><a href="#"><i class="fa fa-instagram"></i></a></li>
								</ul>
							</div>
						</div>
					</div>
					<!-- /post author -->

					<!-- /related post -->
					<div>
						<div class="section-title">
							<h3 class="title">Artigos relacionados</h3>
						</div>
						<div class="row">
							<!-- post -->
							<%@relacionados.each do |relacionado|%>
							<div class="col-md-4" style='border:10px'>
								<div class="post post-sm">
									<a class="post-img" href=<%=blog_path(relacionado.url)%>><img src=<%=relacionado.attachment.url(:relacionados)%> alt=""></a>
									<div class="post-body">
										<div class="post-category">
											<%relacionado.categorium.each do |categoria|%>
											<a href="category.html"><%=categoria.name%></a>
											<%end%>
										</div>
										<h3 class="post-title title-sm"><a href=<%=blog_path(relacionado.url)%>><%=relacionado.title%></a></h3>
										<ul class="post-meta">
											<li><a href="author.html"><%=relacionado.user.name%> <%=relacionado.user.sobrenome%></a></li>
											<li><%=relacionado.created_at.strftime("%d %B %Y")%></li>
										</ul>
									</div>
								</div>
							</div>
							<%end%>

						</div>
					</div>
					<!-- /related post -->

					<!-- post comments -->
					<div class="fb-comments" data-href=<%=request.original_url%> data-width="100%" data-numposts="5"></div>					<!-- /post reply -->
				</div>
				<div class="col-md-4">
					<!-- ad widget -->
					<%=render 'coluna', popular: @popular%>
				</div>
			</div>
			<!-- /row -->
		</div>
		<!-- /container -->
	</div>

