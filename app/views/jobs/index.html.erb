        <div class="content">
        <h3>Jobs Disponíveis</h3>
        <hr>
            <div class="animated fadeIn">
                <div class="row">
                  <%if @disponiveis.any?%>
                  <%@disponiveis.all.each do |disponivel|%>
                    <%= render 'job_card', job: disponivel %>
                  <%end%>
                  <%else%>
                    <div class='content'><p>Não existe nenhuma oferta de Job para você no momento. Fique atento a novos Jobs</p></div>
                  <%end%>
                </div><!-- .row -->
            </div><!-- .animated -->
        </div><!-- .content -->
        <div class="content">
        <h3>Meus Jobs em Aberto</h3>
        <hr>
            <div class="animated fadeIn">
                <div class="row">
                    <%if @aceitos.any?%>
                        <%@aceitos.all.each do |aceito|%>
                            <%= render 'job_card', job: aceito %>
                        <%end%>
                    <%else%>
                        <div class='content'><p>Você não possui nenhum Job em aberto no momento. Fique atento a novos Jobs</p></div>
