<div class="content">
        <h3>Jobs em aberto</h3>
        <hr>
            <div class="animated fadeIn">
                <div class="row">
                  <%if @abertos.any?%>
                  <%@abertos.all.each do |aberto|%>
                    <div class="col-sm-3">
                        <a href=<%=job_path(aberto.id)%>><div class="card">
                            <img class="card-img-top" src=<%=aberto.image.url(:capa)%> alt="Card image cap">
                            <div class="card-body">
                                <h4 class="card-title mb-3"><%=aberto.title%></h4>
                                <p class="card-text"><%=aberto.description%></p>
                            </div>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">
                                  <a href="#"> <i class="fa fa-bell-o"></i> Job ID<span class="pull-right">#<%=aberto.id%></span></a>
                                </li>
                                <li class="list-group-item">
                                  <a href="#"> <i class="fa fa-money"></i> Valor <span class="pull-right">R$<%=aberto.value%></span></a>
                                </li>
                                <li class="list-group-item">
                                  <a href="#"> <i class="fa fa-tasks"></i> Tipo <span class="pull-right"><%=aberto.tipo%></span></a>
                                </li>
                                <li class="list-group-item">
                                  <a href="#"> <i class="fa fa-clock-o"></i> Disponível <span class="pull-right">Horário Aqui</span></a>
                                </li>
                                <li class="list-group-item">
                                  <a href="#"> <i class="fa fa-user"></i> Dono <span class="pull-right"><%=aberto.modeler.name%></span></a>
                                </li>
                              </ul>

                        </div></a>
                    </div>
                  <%end%>
                  <%else%>
                    <div class='content'><p>Não existe nenhum Job em aberto no momento. Fique atento a novos Jobs</p></div>
                  <%end%>
                </div><!-- .row -->
            </div><!-- .animated -->
        </div><!-- .content -->