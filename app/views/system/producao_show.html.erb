<style>

.fotinha{
  overflow:hidden;
  height: 120px;
  width:22%;
  display: inline-block;
  position:relative;
  border:1px solid #bfbfbf;
  background-color:white;
}

@media (max-width: 768px){
  .mySlides{
  height:auto !important;
  overflow:hidden;
  padding:5px !important;
}
}

.mySlides{
  height:600px;
  overflow:auto;
}
li{
    color:#878787;
}




</style>
  <div class="content">
    <div class="animated fadeIn">
      <div class="row">
        <div class='col-lg-4'>
          <div class="card">
            <div class="card-header">
              <strong>Informações</strong>
            </div>

            <ul class="list-group list-group-flush">
              <li class="list-group-item">
                <i class="fa fa-bell-o"></i> Cliente<span class="pull-right"><%=@job.name%> <%=@job.sobrenome%></span>
              </li>
              <li class="list-group-item">
                <i class="fa fa-bell-o"></i> Job ID<span class="pull-right">#<%=@job.identificador%></span>
              </li>
              <li class="list-group-item">
                <i class="fa fa-cubes"></i> N° peças<span class="pull-right"><%=@job.items.count%></span>
              </li>
              <li class="list-group-item">
                  <i class="fa fa-hourglass-start"></i> Tempo total <span class="pull-right"><%=@job.tempo_impressao%>h</span>
              </li>
              <li class="list-group-item">
                <i class="fa fa-balance-scale"></i> Massa Total <span class="pull-right"><%massa = 0%><%@job.items.each do |item|%><%massa = massa + item.massa%><%end%><%=massa%>g</span>
              </li>
              <li class="list-group-item">
                <a href="#"> <i class="fa fa-money"></i> Valor <span class="pull-right" style='color:green'>R$<%=@job.valor%></span></a>
              </li>
              <li class="list-group-item">
                <a href="#"><i class="fa fa-clock-o"></i> DeadLine <span class="pull-right"><strong style='color:red'><%=@job.prazo_final%></strong></span></a>
              </li>
            </ul>
          </div>
          <aside class="profile-nav alt">
            <section class="card">
              <div class="card-header">
                <strong>Histórico</strong>
              </div>
              <div class="card-header user-header alt" style='background: #f1f2f7;'>

                <%@job.job_notifications.each do |notification|%>
                  <div class="media">
                    <a href="#">

                      <img class="align-self-center rounded-circle mr-3" style="width:50px; height:50px;" alt="" src="<%if notification.modeler.image.url(:thumb)%><%=notification.modeler.image.url(:thumb)%><%else%>https://beeprinted-stls.s3.amazonaws.com/Plataforma/Profile/user.jpg<%end%>">
                    </a>
                    <div class="media-body">
                      <p><%=notification.message%></p>
                    </div>
                  </div>
                  <div class='text-right' style='opacity:0.6'>
                    <p><strong><%=time_ago_in_words notification.created_at%></strong></p>
                  </div>
                  <hr>
                <%end%>
              </div>

            </section>
          </aside>
        </div>
        <div class='col-lg-8'>
           <div class="card" style='width:100%'>
              <div class="card-header">
                <strong class="card-title">Itens para Impressão</strong>
              </div>
              <div class="table-stats order-table ov-h">
                <table class="table ">
                  <thead>
                    <tr>
                      <th>ID</th>
                      <th>Nome</th>
                      <th>Quantidade</th>
                      <th>Tempo</th>
                      <th>Massa</th>
                      <th>Download</th>
                      <th>Status</th>
                      <th>Info</th>
                    </tr>
                  </thead>
                  <tbody>
                    <%@job.items.each do |item|%>
                      <tr>
                        <td> #<%=item.id%> </td>
                        <td><%=File.basename(item.attachment.url)%></td>
                        <td><%=item.quantidade%></td>
                        <td><%=item.tempo%>h</td>
                        <td><%=item.massa%>g</td>
                        <td>
                          <a href='<%=item.attachment.url%>' title='Download'><span class="badge badge-complete"><i class="fa fa-download" aria-hidden="true"></i></span></a>
                        </td>
                        <td>Produzindo</td>
                        <td><button class="badge badge-complete" style='background-color:#3F315D;border:none' type='button' data-toggle="modal" data-target="#ExemploModalCentralizado"><strong>Mais Informações</strong></button></td>
                      </tr>
                    <%end%>
                            
                  </tbody>
                </table>
              </div> <!-- /.table-stats -->
            </div>    
        </div>
      </div>

    </div>
  </div>

  <!-- Botão para acionar modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#ExemploModalCentralizado">
  Abrir modal de demonstração
</button>

<!-- Modal -->
<div class="modal fade" id="ExemploModalCentralizado" tabindex="-1" role="dialog" aria-labelledby="TituloModalCentralizado" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="TituloModalCentralizado">Título do modal</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
        <button type="button" class="btn btn-primary">Salvar mudanças</button>
      </div>
    </div>
  </div>
</div>

