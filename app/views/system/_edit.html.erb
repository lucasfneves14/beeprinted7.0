  <script>
  $( function() {
    $( "#orcamento_dataretorno" ).datepicker();
    $( "#orcamento_dataultimo" ).datepicker();
    $( "#adicionado_dataretorno" ).datepicker();
    $( "#adicionado_dataultimo" ).datepicker();
    $( "#modeling_dataretorno" ).datepicker();
    $( "#modeling_dataultimo" ).datepicker();
  } );
